{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: main.py",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/main.py",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": false,  // 改为false，允许进入所有代码
      "env": { "PYTHONPATH": "${workspaceFolder}" }
    }
  ]
}